{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "file_explorer",
  "version": "0.1.0",
  "identifier": "com.file_explorer.app",
  "build": {
    "frontendDist": "../src",
    "devUrl": "http://localhost:3000/",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "withGlobalTauri": false,
    "windows": [
      {
        "title": "Profi File Explorer",
        "width": 1200,
        "height": 800,
        "resizable": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "plugins": {
    "allowlist": {
      "event": {
        "listen": ["search_finished"],
        "emit": ["search_finished"]
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}